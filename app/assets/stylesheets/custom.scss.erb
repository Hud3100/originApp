@import "bootstrap";

body {
  font-family: "Montserrat","游ゴシック",YuGothic,"ヒラギノ角ゴ ProN W3","Hiragino Kaku Gothic ProN","メイリオ",Meiryo,sans-serif;
  margin: auto;
}

#Navber {
  white-space: nowrap;
}

.flash {
  color: $white;
  text-align: center;
  &__alert {
    background-color: red;
  }
  &__notice {
    background-color: $blue;
  }
}

.container {
  margin-top: 10px;
}

.container-fluid {
  padding: 0px;
}

.navbar-brand {
  font-weight: bold;
}

#navmenu1 {
  display: inline-block;
}

.jumbortron {
  height: 500px;
  background-image: url("<%= asset_path('main.jpeg') %>");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.form-group-micropost {
  width: 1275px;
  margin: auto;
  margin-top: 10px;
}

textarea {
  resize: none;
}

.button_wrapper {
  margin: 0 auto;
  width: 460px;
}

.no-gutters {
  margin:0;
  padding:0;
}

.no-gutters > .col,
.no-gutters > [class*="col-"] {
  margin:0;
  padding:0;
}

.form {
  margin: auto;
}