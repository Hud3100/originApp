<div class="comment-container mx-auto">
  <hr>
  <div class="container">
    <div class="row">
      <div class="col-lg-10">
        <h2>コメント一覧</h2>
        <% @micropost.comments.each do |comment| %>
          <div class="comment-list">
            <% if comment.commentable %>
              <h4><%= comment.commentable.name %></h4>
              <div class="comment-sender">
                <p><%= comment.commentable_type == 'User' ? "ユーザーからのコメント" : "カスタムショップからの提案orコメント" %>
              </div>
            <% end %>
            <p class="comment-title">件名: <%= comment.title %></p>
            <p>内容: <%= comment.content %></p>
            <div class="carousel slide" data-ride="carousel" data-pause="hover" data-interval="3000">
              <div class="carousel-inner">
                <% comment.images.each_with_index do |image, i| %>
                  <div class="carousel-item <%= "active" if i.zero? %>">
                    <img src="<%= image.img.url %>" width="400" height="300">
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'comments/comments_company' if current_company %>
  <%= render 'comments/comments_user' if current_user %>
</div>