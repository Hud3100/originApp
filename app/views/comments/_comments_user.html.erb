<div class="container">
  <div class="row justify-content-center">
    <div class="form_comment col-md-8">
      <h4>この車への提案やコメントをする</h4>
      <%= form_with(model: [@micropost, @comment], local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content , class: "form-control", rows: 10 %>
        </div>
        <br>
          <%= f.fields_for :images do |i| %>
            <%= i.file_field :img %>
          <% end %>
          <%= f.hidden_field :commentable_type, value: "User" %>
          <%= f.hidden_field :commentable_id, value: current_user.id %>
        <%= f.submit 'コメントする', class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
