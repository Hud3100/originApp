<div class="container container-signup">
  <div class="row">
    <div class="form col-md-8 col-ig-6">
      <h2 class="form-group">カスタムショップの登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-group">
          <%= f.label :name, class: "control-label" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :email, class: "control-label" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :password, class: "control-label" %>
          <% if @minimum_password_length %>
          <nobr> (  <%= @minimum_password_length %> 文字以上でお願いします！) </nobr>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :password_confirmation, class: "control-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="actions form-group">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "companies/shared/links" %>
    </div>
  </div>
</div>
